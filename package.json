{
    "name": "drifellascape",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "author": "d347h.eth <wagdie.dev@gmail.com>",
    "license": "AGPL-3.0-only",
    "workspaces": [
        "backend",
        "worker",
        "frontend",
        "shared",
        "database"
    ],
    "devDependencies": {
        "@types/node": "24.3.3",
        "prettier": "3.3.3",
        "sharp": "0.34.3",
        "tsx": "4.20.5",
        "typescript": "5.9.2",
        "vitest": "3.2.4"
    },
    "engines": {
        "node": "24.3.0"
    },
    "packageManager": "yarn@4.9.4",
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "overrides": [
            {
                "files": "*.md",
                "options": {
                    "tabWidth": 2,
                    "proseWrap": "preserve"
                }
            }
        ]
    },
    "scripts": {
        "format": "prettier . --write",
        "format:check": "prettier . --check",
        "worker:run": "yarn tsx worker/src/index.ts",
        "backend:run": "yarn tsx backend/src/server.ts"
    },
    "recommendations": [
        "esbenp.prettier-vscode"
    ]
}
